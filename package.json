{
  "name": "react-native-media-controls",
  "description": "A sweet UI to control your video and audio components",
  "version": "1.0.0",
  "author": {
    "name": "Charlie L",
    "email": "charliesbot@gmail.com"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "babel src/ -d lib/ src/assets --out-dir lib/ --copy-files",
    "clean": "rimraf lib",
    "flow": "flow check ./",
